# ============================================
# SENIOR HEALTH VOICE AGENT - Environment Variables
# ============================================

# Azure OpenAI (GPT-5-CHAT)
AZURE_OPENAI_API_VERSION='2025-04-01-preview'
AZURE_OPENAI_DEPLOYMENT_NAME='gpt-5-chat'
AZURE_OPENAI_ENDPOINT='https://your-openai.cognitiveservices.azure.com/'
AZURE_OPENAI_KEY='your-openai-key'

# Azure Speech Services
AZURE_SPEECH_ENDPOINT="https://eastus2.api.cognitive.microsoft.com/"
AZURE_SPEECH_KEY="your-speech-key"
AZURE_SPEECH_KEY2="your-speech-key-2"
AZURE_SPEECH_REGION=eastus2
SPEECH_VOICE_NAME=en-US-JasonNeural

# Azure Cosmos DB (Operational - Conversations)
AZURE_COSMOS_ENDPOINT='https://your-cosmos.documents.azure.com:443/'
AZURE_COSMOS_KEY='your-cosmos-key'
COSMOS_DATABASE=conversations
COSMOS_CONTAINER=sessions

# Azure Redis Cache (Session State)
AZURE_REDIS_HOST='your-cache.redis.cache.windows.net'
AZURE_REDIS_KEY='your-redis-key'
REDIS_PORT=6380
REDIS_SSL=true

# Azure SQL Database (Analytics - Dashboard Data)
AZURE_SQL_SERVER='your-server.database.windows.net'
AZURE_SQL_DATABASE='SeniorHealthAnalytics'
AZURE_SQL_USERNAME='sqladmin'
AZURE_SQL_PASSWORD='YourSecurePassword123!'

# Azure AI Search (Knowledge Base)
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY='your-search-key'
SEARCH_INDEX=knowledge-base

# Azure Container Registry
ACR_LOGIN_SERVER='your-registry.azurecr.io'
ACR_USERNAME='your-registry'
ACR_PASSWORD='your-acr-password'

# Twilio (Phone Calls)
TWILIO_ACCOUNT_SID='your-account-sid'
TWILIO_AUTH_TOKEN='your-auth-token'
TWILIO_PHONE_NUMBER='+18005551234'

# Resource Group
RESOURCE_GROUP='voice-agent-rg'
REGION_MAIN=eastus2
REGION_COSMOS=westus2
